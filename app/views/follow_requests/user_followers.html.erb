<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      <%= @current_user.username %>
    </h1>
  </div>
</div>

<hr>

<%# FOLLOWER BANNER %>
<div>
  <table class="homepage_profile_section">
    <tr>

      <th>
        <%= @current_user.followers.count %>
        Followers
      </th>

      <th>
        <%= @current_user.leaders.count %> 
        Following
      </th>
    </tr> 
  </table>
</div>

<%# IF STATEMENT TO SEE IF PENDING REQUESTS %>
<% if @user_follow_requests.where({:status => "pending"}).count > 1%>
    <%# PENDING FOLLOWERS %>
      <hr>
      <h3><%= @current_user.username %>'s Pending Requests</h3>
      <div class="row mb-3">
        <div class="col-md-12">
          <table class="table">
            <tr>

              <th>
                User
              </th>

              <th>
                Sent
              </th>

              <th>
                
              </th>

              <th>
                
              </th>
            </tr>

            <% @user_follow_requests.where({:status => "pending"}).each do |follow_request| %>
            <tr>
              <td>
                <a href="/users/<%= User.all.where({:id => follow_request.sender_id}).at(0).username %>">
                  <%= User.all.where({:id => follow_request.sender_id}).at(0).username %>
                </a>
              </td>

              <td>
                <%= time_ago_in_words(follow_request.created_at) %> ago
              </td>

              <td>
                <a href="/accept_follow_request/<%= follow_request.id %>">
                  <svg class="bi bi-check-circle" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M15.354 2.646a.5.5 0 010 .708l-7 7a.5.5 0 01-.708 0l-3-3a.5.5 0 11.708-.708L8 9.293l6.646-6.647a.5.5 0 01.708 0z" clip-rule="evenodd"/>
                    <path fill-rule="evenodd" d="M8 2.5A5.5 5.5 0 1013.5 8a.5.5 0 011 0 6.5 6.5 0 11-3.25-5.63.5.5 0 11-.5.865A5.472 5.472 0 008 2.5z" clip-rule="evenodd"/>
                  </svg>
                </a>
              </td>

              <td>
                <a href="/delete_follow_request/<%= follow_request.id %>">
                  <svg class="bi bi-trash" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path d="M5.5 5.5A.5.5 0 016 6v6a.5.5 0 01-1 0V6a.5.5 0 01.5-.5zm2.5 0a.5.5 0 01.5.5v6a.5.5 0 01-1 0V6a.5.5 0 01.5-.5zm3 .5a.5.5 0 00-1 0v6a.5.5 0 001 0V6z"/>
                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 01-1 1H13v9a2 2 0 01-2 2H5a2 2 0 01-2-2V4h-.5a1 1 0 01-1-1V2a1 1 0 011-1H6a1 1 0 011-1h2a1 1 0 011 1h3.5a1 1 0 011 1v1zM4.118 4L4 4.059V13a1 1 0 001 1h6a1 1 0 001-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" clip-rule="evenodd"/>
                  </svg>
                </a>
              </td>
            </tr>
            <% end %>
          </table>
        </div>
      </div>
<%else%>
<%end%>

<%# CURRENT FOLLOWERS %>
<hr>
<h3><%= @current_user.username %>'s Followers</h3>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Status
        </th>

        <th>
          Delete
        </th>
      </tr>

      <% @user_follow_requests.where({:status => "accepted"}).each do |follow_request| %>
      <tr>
        <td>
          <a href="/users/<%= User.all.where({:id => follow_request.sender_id}).at(0).username %>">
            <%= User.all.where({:id => follow_request.sender_id}).at(0).username %>
          </a>
        </td>

        <td>
          <%= time_ago_in_words(follow_request.created_at) %> ago
        </td>

        <td>
          <%= follow_request.status %>
        </td>

        <td>
          <a href="/delete_follow_request/<%= follow_request.id %>">
            Delete
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
