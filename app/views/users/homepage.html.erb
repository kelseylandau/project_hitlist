<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          Country
        </th>

        <th>
          Since
        </th>

        <th>
          Edit
        </th>

        <th>
          
        </th>
      </tr>

      <% @user_hits.each do |country_hit| %>
      <tr>
        <td>
          <%= country_hit.country %>
        </td>

        <td>
          <%= time_ago_in_words(country_hit.created_at) %> ago
        </td>

        <td>
          <a href="/move_country_hit_list/:path_id/<%= country_hit.id %>">
