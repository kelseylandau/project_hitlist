<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all country hit lists
    </h1>
  </div>
</div>

<hr>

<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h2>
      Add a new country hit list
    </h2>

    <form action="/insert_country_hit_list" method="post">
      <div class="form-group">
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" class="form-control">
      </div>

      <div class="form-group">
        <label for="country_box">
          Country
        </label>

        <input type="text" id="country_box" name="query_country" class="form-control">
      </div>

      <button class="btn btn-block btn-outline-secondary">
        Create country hit list
      </button>
    </form>
  </div>
</div>

<hr>
<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Country
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @country_hit_lists.each do |country_hit_list| %>
      <tr>
        <td>
          <%= country_hit_list.id %>
        </td>

        <td>
          <%= country_hit_list.user_id %>
        </td>

        <td>
          <%= country_hit_list.country %>
        </td>

        <td>
          <%= time_ago_in_words(country_hit_list.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(country_hit_list.updated_at) %> ago
        </td>

        <td>
          <a href="/country_hit_lists/<%= country_hit_list.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
