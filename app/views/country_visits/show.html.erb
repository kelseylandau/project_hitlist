<div >
  <div >
    <h1>
      <%= User.where({ :id => @country_visit.user_id}).at(0).username %>'s visit to <%= @country_visit.country %>
    </h1>

    <div>
      <div >
        <a href="/users/<%= User.where({ :id => @country_visit.user_id}).at(0).username %>" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

    <dl>
      <dt>
        Country
      </dt>
      <dd>
        <%= @country_visit.country %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <%= User.where({ :id => @country_visit.user_id}).at(0).username %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@country_visit.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@country_visit.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>

<% if @current_user.username == User.where({ :id => @country_visit.user_id}).at(0).username %>
    <%# SHOW THE EDIT SECTION %>
  <div >
    <div >
      <h2>
        Edit country visit
      </h2>

      <form action="/modify_country_visit/<%= @country_visit.id %>"  method="post" >
        <div class="form-group">
          <label for="country_box">
            Country
          </label>

          <input type="text" id="country_box" name="query_country" class="form-control" value="<%= @country_visit.country %>">
        </div>

        <div class="form-group">
          <label for="user_id_box">
            User
          </label>

          <input type="hidden" id="user_id_box" name="query_user_id" class="form-control" value="<%= @country_visit.user_id %>">
        </div>

        <div class="row mb-3">
            <div class="col">
            <button class="btn btn-block btn-outline-secondary">
              Update country visit
            </button>
          </div>

          <div class="col">
            <a href="/delete_country_visit/<%= @country_visit.id %>" class="btn btn-block btn-outline-secondary">
              Delete country visit
            </a>
          </div>
        </div>

      </form>
    </div>
  </div>
<%else%>
<%end%>

